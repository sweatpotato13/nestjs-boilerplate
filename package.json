{
    "name": "nestjs-boilerplate",
    "version": "0.0.1",
    "description": "",
    "author": "Cute_Wisp",
    "private": true,
    "license": "UNLICENSED",
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "prettier",
            "yarn run eslint --fix"
        ],
        "*.{md,json}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "prepare-commit-msg": "devmoji -e",
            "commit-msg": "if git-branch-is dev; then commitlint -E HUSKY_GIT_PARAMS; fi"
        }
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "prettier": "prettier --write \"src/**/*.ts\"",
        "prestart": "yarn run types",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "types": "ts-node src/common/graphql/generator/type.generator.ts",
        "release": "standard-version",
        "release:major": "standard-version -- --release-as major",
        "release:minor": "standard-version -- --release-as minor",
        "release:patch": "standard-version -- --release-as patch",
        "release:version": "standard-version -- --release-as"
    },
    "dependencies": {
        "@babel/core": "^7.14.3",
        "@nestjs/common": "^7.6.17",
        "@nestjs/config": "^0.6.3",
        "@nestjs/core": "^7.6.17",
        "@nestjs/cqrs": "^7.0.1",
        "@nestjs/platform-express": "^7.6.17",
        "@nestjs/typeorm": "^7.1.5",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cls-rtracer": "^2.6.0",
        "dotenv": "^10.0.0",
        "express-rate-limit": "^5.2.6",
        "helmet": "^4.6.0",
        "moment": "^2.29.1",
        "morgan": "^1.10.0",
        "nest-winston": "^1.5.0",
        "node-eventstore-client": "^0.2.18",
        "node-fetch": "^2.6.1",
        "object-assign": "^4.1.1",
        "pg": "^8.6.0",
        "rimraf": "^3.0.2",
        "rxjs": "^7.1.0",
        "tsconfig-paths": "^3.9.0",
        "typedi": "^0.10.0",
        "typeorm": "^0.2.32",
        "typeorm-transactional-cls-hooked": "^0.1.21",
        "winston": "^3.3.3",
        "winston-mongodb": "^5.0.7"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@nestjs/cli": "^7.6.0",
        "@nestjs/schematics": "^7.3.1",
        "@nestjs/testing": "^7.6.17",
        "@types/helmet": "^4.0.0",
        "@types/jest": "26.0.23",
        "@types/node": "^15.6.1",
        "@types/xml2js": "^0.4.8",
        "@typescript-eslint/eslint-plugin": "4.26.0",
        "@typescript-eslint/parser": "4.26.0",
        "devmoji": "^2.3.0",
        "eslint": "7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-security": "^1.4.0",
        "git-branch-is": "^4.0.0",
        "husky": "^4.3.8",
        "jest": "27.0.3",
        "lint-staged": "^11.0.1",
        "prettier": "^2.3.0",
        "standard-version": "^9.3.1",
        "supertest": "^6.1.3",
        "ts-jest": "27.0.2",
        "ts-loader": "^9.2.2",
        "ts-node": "10.0.0",
        "typescript": "^4.3.2"
    }
}
