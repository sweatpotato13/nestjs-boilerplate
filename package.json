{
    "name": "nestjs-boilerplate",
    "version": "0.0.1",
    "description": "",
    "author": "Cute_Wisp",
    "private": true,
    "license": "UNLICENSED",
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "prettier",
            "yarn run eslint --fix"
        ],
        "*.{md,json}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "prettier": "prettier --write \"src/**/*.ts\"",
        "prestart": "yarn run types",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "types": "ts-node src/common/graphql/generator/type.generator.ts",
        "release": "standard-version",
        "release:major": "standard-version -- --release-as major",
        "release:minor": "standard-version -- --release-as minor",
        "release:patch": "standard-version -- --release-as patch",
        "release:version": "standard-version -- --release-as",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "dependencies": {
        "@babel/core": "^7.18.6",
        "@elastic/elasticsearch": "^8.2.1",
        "@nestjs/common": "^8.4.7",
        "@nestjs/config": "^2.1.0",
        "@nestjs/core": "^8.4.7",
        "@nestjs/cqrs": "^8.0.5",
        "@nestjs/elasticsearch": "^8.1.0",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^8.4.7",
        "@nestjs/typeorm": "^7.1.5",
        "body-parser": "^1.20.0",
        "bs58": "^5.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cls-rtracer": "^2.6.2",
        "cross-fetch": "^3.1.5",
        "dotenv": "^16.0.1",
        "express-rate-limit": "^6.4.0",
        "helmet": "^5.1.0",
        "ioredis": "^5.1.0",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "nest-winston": "^1.6.2",
        "node-eventstore-client": "^0.2.18",
        "object-assign": "^4.1.1",
        "passport": "^0.6.0",
        "passport-google-oauth20": "^2.0.0",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.5",
        "tsconfig-paths": "^4.0.0",
        "typedi": "^0.10.0",
        "typeorm": "^0.2.32",
        "typeorm-transactional-cls-hooked": "^0.1.21",
        "winston": "^3.8.1",
        "winston-mongodb": "^5.0.7"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@nestjs/cli": "^8.2.8",
        "@nestjs/schematics": "^8.0.11",
        "@nestjs/testing": "^8.4.7",
        "@types/helmet": "^4.0.0",
        "@types/jest": "28.1.4",
        "@types/node": "^18.0.3",
        "@types/passport": "^1.0.10",
        "@types/passport-google-oauth20": "^2.0.11",
        "@types/xml2js": "^0.4.11",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-security": "^1.5.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "git-branch-is": "^4.0.0",
        "husky": "^8.0.1",
        "jest": "28.1.2",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "standard-version": "^9.5.0",
        "supertest": "^6.2.4",
        "ts-jest": "28.0.5",
        "ts-loader": "^9.3.1",
        "ts-node": "10.8.2",
        "typescript": "^4.7.4"
    },
    "packageManager": "yarn@3.2.0"
}
